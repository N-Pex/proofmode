<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Onboarding styles       					   -->
    <!--                                               -->
    <!--                                               -->

    <style name="OnboardingStyle">
        <item name="android:background">@color/onboarding_background</item>
    </style>

    <style name="OnboardingIntroTitleStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/onboarding_title_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="font">@font/hurme</item>
    </style>

    <style name="OnboardingIntroSubtitleStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/onboarding_subtitle_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="font">@font/hurme</item>
    </style>

    <style name="OnboardingIntroContentStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/onboarding_content_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="font">@font/verdana</item>
    </style>

    <style name="OnboardingStepTextStyle" parent="OnboardingIntroSubtitleStyle">
        <item name="android:textSize">@dimen/onboarding_info_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="OnboardingStepTitleStyle" parent="OnboardingIntroTitleStyle">
        <item name="android:textColor">@color/onboarding_gray</item>
	</style>

    <style name="OnboardingStepSubtitleStyle" parent="OnboardingIntroSubtitleStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="OnboardingStepContentStyle" parent="OnboardingIntroContentStyle">
        <item name="android:textColor">@android:color/black</item>
	</style>

    <style name="OnboardingButtonStyle">
        <item name="android:height">44dp</item>
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/onboarding_gray</item>
		<item name="android:textAllCaps">true</item>
	</style>

    <style name="OnboardingButtonDarkStyle" parent="OnboardingButtonStyle">
        <item name="android:background">@drawable/rounded_button_dark_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="OnboardingButtonWhiteStyle" parent="OnboardingButtonStyle">
        <item name="android:background">@drawable/rounded_button_white_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>