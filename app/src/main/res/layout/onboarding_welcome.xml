<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center_horizontal"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/colorAccent"
    >
    <RelativeLayout
        android:id="@+id/ivIllustration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            style="@style/OnboardingIntroTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name" />
        <TextView
            android:id="@+id/title"
            style="@style/OnboardingIntroTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/onboarding_intro_title" />
        <TextView
            android:id="@+id/content"
            style="@style/OnboardingIntroContentTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/onboarding_intro_content" />
        <TextView
            style="@style/OnboardingIntroTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/onboarding_learn_more" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="?attr/actionBarSize"
            >
            <Button
                android:id="@+id/btnNext"
                style="@style/OnboardingButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="@string/onboarding_get_started"
                />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
